{% extends 'partials/base.html.twig' %}

{% block body %}

	<!-- Main -->
		<div id="main" class="wrapper style4">
			<div class="container">
				<div class="row">

					<!-- Sidebar -->
					<div id="sidebar" class="4u">
						{% include 'partials/components/links_sidebar.html.twig' %}
					</div>

					<!-- Content -->
					<div id="content" class="8u skel-cell-important">
						<section>
							<header class="major">
								<h2>{{ page.title }}</h2>
								{% if page.header.subtitle %}
									<span class="byline">{{ page.header.subtitle }}</span>
								{% endif %}
							</header>
							{{ page.content }}
						</section>
					</div>
				</div>
			</div>
		</div>

	{% include 'partials/sections/portals.html.twig' with { 'data_source': page.find('/') } %}

{% endblock body %}
